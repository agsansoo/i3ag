conky.config = {
	alignment = 'bottom_left',
	background = true,
	color2 = '#ECEFF4',
	color3 = '#d8dee9',
	cpu_avg_samples = 2,
	default_color = '#81A1C1',
	double_buffer = true,
	font = 'Roboto:size=10',
	draw_shades = false,
	gap_x = 40,
	gap_y = 50,
	minimum_width = 150,
	no_buffers = true,
	own_window = true,
	own_window_type = 'override',
	own_window_transparent = true,
	update_interval = 1.0,
	use_xft = true,
}
conky.text = [[
${voffset 5}${color}${font Roboto:size=11}MENUS-TERMINAL${font}
${color2}open new terminal - ${color}[super]+enter
${color2}rofi menu - ${color}[super]+F1 -or- [alt]+LMB
${color2}dmenu - ${color}[super]+d
${color2}j4menu - ${color}[alt]+j
${voffset 5}${color}${font Roboto:size=11}HELP${font}
${color2}system monitors - ${color}[super]+F3
${color2}system tools - ${color}[super]+F4
${color2}active applications - ${color}[super]+F12 
${voffset 5}${color}${font Roboto:size=11}TILING${font}
${color2}go to next/prev workspace - ${color}[alt]+arrow </>
${color2}jump to workspace 1-9 - ${color}[super]+1-9
#${color2}send to workspace 1-9 - ${color}[super]+ctrl+1-9
${color2}change workspaces - ${color}[super]+ctrl+arrowkeys
${color2}toggle floating - ${color}[super]+shift+space
${color2}toggle split direction - ${color}[super]+q
${voffset 5}${font Hack Nerd Font:size=11}${color}WORK   ${color2}  1:    2:    3:  
${color}SPACES ${color2}  4:    5:    6:  
${font}[super]+1-9    ${color2}${font Hack Nerd Font:size=11}7:    8:    9: 
${voffset 5}${color}${font Roboto:size=11}QUIT${font}
${color2}kill focused - ${color}[super]+shift+q
${color2}exit - ${color}[super]+q

]]
